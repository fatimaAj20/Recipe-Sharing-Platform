@page
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]
@model RecipeSharingProject.Client.Pages.Recipe.RecipeModel
@{
}

<h2>Create Recipe</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Ingredients">Ingredients</label>
        <textarea id="Ingredients" name="Ingredients" class="form-control"></textarea>
        <small class="form-text text-muted">Enter ingredients separated by commas</small>
    </div>

    <div class="form-group">
        <label for="Steps">Steps</label>
        <textarea id="Steps" name="Steps" class="form-control"></textarea>
        <small class="form-text text-muted">Enter steps separated by commas</small>
    </div>

    <div class="form-group">
        <label for="Cuisine">Cuisine</label>
        <input type="text" id="Cuisine" name="Cuisine" class="form-control" />
    </div>

    <div class="form-group">
        <label for="TimeNeeded">TimeNeeded</label>
        <input type="text" id="TimeNeeded" name="TimeNeeded" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Serving">Serving</label>
        <input type="text" id="Serving" name="Serving" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Calories">Calories</label>
        <input type="text" id="Calories" name="Calories" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Fat">Fat</label>
        <input type="text" id="Fat" name="Fat" class="form-control" />
    </div>

    <div class="form-group">
        <label for="SaturatedFat">SaturatedFat</label>
        <input type="text" id="SaturatedFat" name="SaturatedFat" class="form-control" />
    </div>

    <div class="form-group">
        <label for="TransFat">TransFat</label>
        <input type="text" id="TransFat" name="TransFat" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Cholesterol">Cholesterol</label>
        <input type="text" id="Cholesterol" name="Cholesterol" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Sodium">Sodium</label>
        <input type="text" id="Sodium" name="Sodium" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Carbohydrates">Carbohydrates</label>
        <input type="text" id="Carbohydrates" name="Carbohydrates" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Fiber">Fiber</label>
        <input type="text" id="Fiber" name="Fiber" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Sugars">Sugars</label>
        <input type="text" id="Sugars" name="Sugars" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Protein">Protein</label>
        <input type="text" id="Protein" name="Protein" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ServingSize">ServingSize</label>
        <input type="text" id="ServingSize" name="ServingSize" class="form-control" />
    </div>

    <div class="form-group">
        <label for="RecipePicture">Recipe Picture</label>
        <input type="file" id="RecipePicture" name="RecipePicture" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Upload a picture for the recipe</small>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>